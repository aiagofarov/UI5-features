<mvc:View controllerName="UI5-features.controller.Start" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page title="{i18n>titleStart}">
		<content>
			<l:VerticalLayout id="containerLayout" width="100%">
				<l:BlockLayout id="BlockLayout" background="Light">
					<l:BlockLayoutRow >
						<l:BlockLayoutCell title="Simple binding" width="3">
							<Input value="Data from hardcoded model: {ModelName>/element1/field1}"/>
							<Input value="Data from model based on json file: {MyJSONModel>/element1/field1}"/>
							<Input
								value="Expression binding based on random: {= Math.random() > 0.5 ? 'Last Math.random() result is more than 0.5' : 'Last Math.random() result is less than 0.5' }"/>
						</l:BlockLayoutCell>
						<l:BlockLayoutCell>
							<Text
								text="It's two single elements that stored in two independent local models. One of this two models is defined right in code while second one is defined in file JSONModel.json"/>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
					<l:BlockLayoutRow>
						<l:BlockLayoutCell title="Collection" width="1">
							<l:VerticalLayout class="sapUiContentPadding">
								<Table id="tab1" items="{MyJSONModel>/table1}" itemPress="onClickOnItem">
									<columns>
										<Column width="auto">
											<Label text="Field 1"/>
										</Column>
										<Column width="auto">
											<Label text="Field 2"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<Text text="{MyJSONModel>field1}"/>
											<Text text="{MyJSONModel>field2}"/>
										</ColumnListItem>
									</items>
								</Table>
							</l:VerticalLayout>
						</l:BlockLayoutCell>
						<l:BlockLayoutCell title="Selected element" width="2">
							<f:SimpleForm id="formForElementBinding" layout = "ResponsiveGridLayout">
								<f:content>
									<Label text="Field 1"/>
									<Input value="{MyJSONModel>field1}" editable="false"/>
									<Label text="Field 2"/>
									<Input value="{MyJSONModel>field2}" editable="false"/>
									<Label text="Hidden field 1"/>
									<Input value="{MyJSONModel>hidden_field1}" change = "onChangeFormElement"/>
									<Label text="Hidden field 2"/>
									<Input value="{MyJSONModel>hidden_field2}" change = "onChangeFormElement"/>
									<MessageStrip id="msgStripElement" visible = "false" type="Warning" text="Note: Changes on form data affect the data model" showCloseButton = "true" />
								</f:content>
							</f:SimpleForm>
						</l:BlockLayoutCell>
						<l:BlockLayoutCell>
							<Text
								text="This is the element binding. On click on the table entry system binds appropriate element to the form."/>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
				</l:BlockLayout>
			</l:VerticalLayout>
		</content>
		<footer>
			<Toolbar>
				<Text id="txtToolbar" text="I'm toolbar footer"/>
				<Button id="btnToolbar" text="I'm toolbar button" press="actionBtn1"/>
				<Button id="btnToolbar2" text="Route to the next screen" press="actionBtn2"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>